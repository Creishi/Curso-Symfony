        Registro Usuario
    {% endblock %}
        {# Inicio del body #}
    {% block body %}
    <!-- Page Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h3>Registro  de Usuario</h3>
      {{ form_start(form) }}
      {{ form_errors(form) }}
      {{ form_end(form) }}
