{# Plantilla de nuestra aplicaci√≥n #}
{% extends "base.html.twig" %}
    {% block title %}
        Reservas
    {% endblock %}
        {# Inicio del body #}
    {% block body %}
            </header>
            <!-- Page Content -->
            <div class="container">
            <h1 class="my-4">Reservas</h1>

            <!-- Categoria Item Row -->
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Acciones</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Num Comensales</th>
                                <th scope="col">Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reserva in reservas %}
                            <tr>
                                <th scope="row"><a href="{{path('nuevaReserva',{'id': reserva.id })}}"><i class="bi bi-pencil-square"></i></a>
                                <a href="#" onclick="return controlBorrado('{{path('borrarReserva',{'id': reserva.id })}}','{{ reserva.fecha|date('Y/m/d h:i')}}');"><i class="bi bi-trash"></i></a>
                                </th>
                                <td>{{ reserva.fecha|date('Y/m/d h:i')}}</td>
                                <td>{{ reserva.comensales}}</td>
                                <td>{{ reserva.observaciones}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.row -->
            </div>
            <!-- /.container-->
    {% endblock %}
    {% block javascripts %}
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="{{ asset('js/controlBorrado.js')}}"></script>
    {% endblock %}